
@{
    Layout = null;
    ViewBag.Error = ViewBag.Error ?? null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="https://www.bitsion.com/bitsion/assets/img/logos/logo_bitsion.png">
    <title>Ingreso - Bitsion</title>

    @Styles.Render("~/Content/css")
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block ">
                                <img class="img-fluid px-3 px-sm-4 mt-5" style="width: 25rem;"
                                     src="https://ar.tucarpeta.com/pro/app/Content/images/Isologo_M.png" alt="">
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Bienvenido a Bitsion!</h1>
                                    </div>
                                    <form class="user" action="@Url.Action("Index", "Acceso")" method="post" novalidate>
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" name="correo"placeholder="Ingrese correo...">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   name="clave"
                                                   id="exampleInputPassword" placeholder="Contraseña">
                                        </div>
                                        @{
                                            if (ViewBag.Error != null)
                                            {
                                               
                                                <div class="row mb-3">
                                                    <div class="col-md-12">
                                                        <div class="alert alert-danger" role="alert">
                                                            @ViewBag.Error
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
 
                                        <button class="btn btn-primary btn-user btn-block" type="submit">Iniciar Sesión</button>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @*SECCION DE SCRIPTS*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.jsdelivr.net/npm/gasparesganga-jquery-loading-overlay@2.1.7/dist/loadingoverlay.min.js"></script>

</body>
</html> 