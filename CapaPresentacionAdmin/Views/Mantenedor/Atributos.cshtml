
@{
    ViewBag.Title = "Atributos";
    ViewBag.Atributos = "active";
    ViewBag.desc = "Esta es la lista de todos los atributos, puedes agregar, editar y borrar atributos.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Todos los atributos</h6>
        </div>
        <div class="card-body">
            <a href="#" class="btn btn-success mb-3" onclick="abrirModal()">
                <span class="icon text-white-50">
                    <i class="fas fa-check"></i>
                </span>
                <span class="text">Crear Atributo</span>
            </a>
            <div class="table-responsive">
                <table class="table table-bordered" id="tabla_Atributos" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<div class="modal fade " id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="exampleModalLabel">Atributos</h5>
                <a href="#" class="btn btn-primary btn-circle btn-sm" data-dismiss="modal" aria-label="Close">
                    <i class="fas fa-times"></i>
                </a>
            </div>
            <div class="modal-body">
                <div class="row g-1">
                    <input id="txtId" value="0" type="hidden" />
                    <div class="col-sm-12 mt-1">
                        <label>Nombre del Atributo</label>
                        <input type="text" class="form-control" id="txtNombre" autocomplete="off">
                    </div>

                </div>
                @*MENSAJE DE ALERTA!*@
                <div class="row mt-4">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            Error
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer mt-auto">
                <button type="button" class="btn btn-success" onClick="Guardar()">Guardar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
<script>
    /*Variables Globales*/
    var tabladata;
    var filaSeleccionada;

    /*CARGAR DATOS A LA TABLA Y MOSTRALA*/
    $(document).ready(function () {
       tabladata = $("#tabla_Atributos").DataTable({
       responsive: true,
       ordering: false,
       "ajax": {
           url: '@Url.Action("ListarAtributos", "Mantenedor")',
           type: "GET",
           dataType: "json"
       },
       /*ASIGNAR DATOS A LA LISTA DEBE COINCIDIR CON LAS COLUMNAS YA CREADAS*/
       "columns": [
           { "data":"Nombre"},
           {
               /*CREAR BOTONES DE EDITAR Y BORRAR*/
               "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' + " " +
                   '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
               "orderable": false,
               "searchable": false,
               "width": "90px"
           },
       ],
       "language": {
           "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
       }
       });
    });

    

    function abrirModal(json) {
        $("#txtId").val(0)
        $("#txtNombre").val("")
        $("#mensajeError").hide();
        /*AL ABRIR EL MODAL PARA EDITAR QUE LE CARGUE LOS DATOS*/
        if (json != null) {
            $("#txtId").val(json.IdAtributo)
            $("#txtNombre").val(json.Nombre)
        }
        /*ABRIR MODAL SOLO CON BOTON CREAR*/
        $("#FormModal").modal("show");
    }

    /*DETECTAR CANDO PRESIONA BOTON EDITAR*/
    $("#tabla_Atributos tbody").on("click", '.btn-editar', function () {
        filaSeleccionada = $(this).closest("tr");
        var data = tabladata.row(filaSeleccionada).data();
        abrirModal(data);

    })

    /*DETECTAR CANDO PRESIONA BOTON BORRAR*/
    $("#tabla_Atributos tbody").on("click", '.btn-eliminar', function () {
        var usuarioSeleccionado = $(this).closest("tr");
        var data = tabladata.row(usuarioSeleccionado).data();
        Swal.fire({
              title: '¿Estás Seguro?',
              text: "No podrás revertir esta acción!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Si, eliminar!'
        }).then((result) => {
            if (result.isConfirmed) {
                jQuery.ajax({
                    url: '@Url.Action("EliminarAtributos", "Mantenedor")',
                    type: "POST",
                    data: JSON.stringify({ id: data.IdAtributo }),
                    dataType: "json",
                    contentType: "application/json; charset=utf8",
                    success: function (data) {
                        if (data.resultado) {
                            Swal.fire(
                                'Eliminado!',
                                'El atributo fue eliminado',
                                'success'
                            )
                            tabladata.row(usuarioSeleccionado).remove().draw();
                        } else {
                            swal("No se pudo eliminar", data.mensaje, "error");
                        }
                    },
                    error: function (error) {
                        console.log(error)
                    },
                });
            }
        })
    })


    function Guardar() {
        var Atributos = {
            IdAtributo: $("#txtId").val(),
            Nombre: $("#txtNombre").val(),
        }
         jQuery.ajax({
             url: '@Url.Action("GuardarAtributos", "Mantenedor")',
             type: "POST",
             data: JSON.stringify({ objeto: Atributos}),
             dataType: "json",
             contentType: "application/json; charset=utf8",
             success: function (data) {
                 //CLIENTE NUEVO
                 $(".modal-body").LoadingOverlay("hide");
                 if (Atributos.IdAtributo == 0) {
                     if (data.resultado != 0) {
                         Atributos.IdAtributo = data.resultado;
                         $("#FormModal").modal("hide");
                         tabladata.row.add(Atributos).draw(false);
                     }
                     else {
                         $("#mensajeError").text(data.mensaje)
                         $("#mensajeError").show();
                     }
                 }
                 else
                 {
                     /*EDITAR CLIENTE*/
                     if (data.resultado) {
                         tabladata.row(filaSeleccionada).data(Atributos).draw(false);
                         filaSeleccionada = null;
                         $("#FormModal").modal("hide");
                     }
                     else {
                         $("#mensajeError").text(data.mensaje)
                         $("#mensajeError").show();
                     }
                 }
             },
             error: function (error) {
                 $(".modal-body").LoadingOverlay("hide");
                 $("#mensajeError").text("Error Ajax")
                 $("#mensajeError").show();
             },
             beforeSend: function() {
                 $(".modal-body").LoadingOverlay("show", {
                     imageResizeFactor: 2,
                     text: "Cargando...",
                     size: 18
                 });
             },
         })
     };
</script>
}
